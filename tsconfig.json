{
	"exclude": [
		"./.yarn",
		"./node_modules",
	],
	"include": [
		"./__mocks__",
		"__tests__",
		"./jest.config.ts",
		"./src/*.json",
		"./src/*.ts",
		"./src/*.tsx",
	],
	"compilerOptions": {
		"baseUrl": "./",
		"allowSyntheticDefaultImports": true,
        "declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"esnext"
		],
		"outDir": "dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
        "types": [
            "jest",
            "node",
        ],
	},
}